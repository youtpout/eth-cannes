{
  "expo": {
    "name": "react-native-app",
    "slug": "react-native-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.react-native-app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow the app to use your location.",
        "NFCReaderUsageDescription": "This app needs access to NFC to read tags",
        "com.apple.developer.nfc.readersession.formats": [
          "NDEF",
          "TAG"
        ],
         "com.apple.developer.nfc.readersession.iso7816.select-identifiers": [
        "A0000002471001",
        "A0000002472001"
      ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.reactnativeapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
       [
      "expo-location",
        {
          "locationWhenInUsePermission": "Allow the app to use your location."
        }
      ],
      [
        "react-native-nfc-manager",
         {
          "nfcReaderUsageDescription": "This app needs access to NFC to read tags",
          "selectIdentifiers": ["A0000002471001", "A0000002472001"],
          "systemCodes": ["8008", "4000"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}